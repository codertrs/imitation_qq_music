/* pages/music-player/music-player.wxss */

.bg-image,.bg-cover{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.bg-cover{
  background-color: rgba(0, 0, 0, .3);
  backdrop-filter: blur(20px);
}

.tabs{
  display: flex;
  font-size: 28rpx;
  color: #aaa;
}

.tabs .active {
  color: #fff;
}
.tabs .divider {
  margin: 0 8rpx;
}


.music{
  /* display: flex;
  flex-direction: column; */
  color: #fff;
  font-size: 28rpx;
  padding: 40rpx 60rpx;
  box-sizing: border-box;
}

.music .album {
  flex: 1;
}

.album .image{
  width: 100%;
  border-radius: 12rpx;
}

.info{
  margin: 30rpx 0;
}

.info .name{
  font-size: 48rpx;
  font-weight: 700;
}


.music .info .singer {
  margin-top: 10rpx;
}


.music .progress {

  margin: 40rpx 0 0 0;
}

.music .progress .slider {
  margin: 16rpx 8rpx 10rpx 18rpx;
}

.time{
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}

.music .lyric{
  text-align: center;
  margin: 16rpx 0;

  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;


}


/* 按钮 */
.controls{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 12rpx 0;
}


.music .controls .btn {
  width: 60rpx;
  height: 60rpx;
}
.music .controls .btn.mode {
  width: 80rpx;
  height: 80rpx;
} 

.music .controls .btn.play {
  width: 140rpx;
  height: 140rpx;
}




.lyric-list{
  color: #aaa;
  font-size: 28rpx;
  text-align: center;
  height: 100%;
  
}

.lyric-list .item{
  height: 35px;
  line-height: 35px;
}

/* 清除滚动条样式 */
.lyric-list ::-webkit-scrollbar {
  display: none;
}

/* 歌词高亮 */
.lyric-list .item.active {
  color: #0f0;
  font-size: 32rpx;
}
