/* pages/music-player/music-player.wxss */

.bg-image,.bg-cover{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.bg-cover{
  background-color: rgba(0, 0, 0, .3);
  backdrop-filter: blur(20px);
}

.tabs{
  display: flex;
  font-size: 28rpx;
  color: #aaa;
}

.tabs .active {
  color: #fff;
}
.tabs .divider {
  margin: 0 8rpx;
}


.music{
  /* display: flex;
  flex-direction: column; */
  color: #fff;
  font-size: 28rpx;
  padding: 40rpx 60rpx;
  box-sizing: border-box;
}

.music .album {
  flex: 1;
}

.album .image{
  width: 100%;
  border-radius: 12rpx;
}

.info .name{
  font-size: 48rpx;
  font-weight: 700;
}


.music .info .singer {
  margin-top: 10rpx;
}




.lyric-list{
  color: #aaa;
  font-size: 28rpx;
}